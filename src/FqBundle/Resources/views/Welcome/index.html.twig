{% extends 'FqBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="carousel slide" id="myCarousel">
                    <ol class="carousel-indicators">
                        <li class="active" data-slide-to="0" data-target="#myCarousel"></li>
                        <li data-slide-to="1" data-target="#myCarousel"></li>
                        <li data-slide-to="2" data-target="#myCarousel"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active" id="slide1">
                            <img src='{{ asset('bundles/fq/images/wind.jpg') }}'/>
                            <div class="carousel-caption">
                                <div class="text-left">
                                    <ul class="list-unstyled">
                                        <li>
                                            <a href="#" data-role="facebook-login" data-target="{{ url('dashboard') }}" class="btn btn-lg btn-social btn-facebook">
                                                <i class="fa fa-facebook"></i>Вход через Facebook
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="container-fluid" style="background: #3ebf99;">
        <div class="container">
            <h2>Что для Вас?</h2>
            {% for category in categories %}
                <div class="col-md-4">
                    <button style="background-image: url({{ asset(category.image) }})"
                            onclick="document.location = '{{ url('event_list', {'categories[]': category.id}) }}'"
                            type="button"
                            class="btn btn-lg category_button">
                        {{ category.name }}
                    </button>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="container">
                    <div class="row" id="recentEvents">
                        <div class="thumbnails row">
                            {% for event in events %}
                                <div class="col-md-4">
                                    <a href="{{ url('event_view', {'id': event.id}) }}" class="thumbnail">
                                        <div class="image_crop" style="height: 275px; overflow: hidden">
                                            {% if event.image %}
                                                <img src="{{ event.image|vlabs_filter('resize', { width : 250, keepRatio : true })|vlabs_media('default') }}">
                                            {% else %}
                                                <img style="min-height:100%; min-width:250px; width:100%" src="{{ asset('bundles/fq/images/no_event_img.png') }}"/>
                                            {% endif %}
                                        </div>
                                        <div class="caption">
                                            <h2> {{ event.title }} </h2>
                                            <div class="event-description" style="overflow:hidden; height: 100px">{{ event.description }}</div>
                                            <div class="text-right"><i>{{ event.schedule|localizeddate('full', 'none') }}</i></div>
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="well text-center">
                    <a href="{{ url('event_list') }}"><h1>Все события ...</h1></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
