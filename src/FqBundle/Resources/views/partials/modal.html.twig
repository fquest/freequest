                    <li><a class="btn btn-social btn-google-plus" style="margin-top: 5px">
                            <i class="fa fa-google-plus"></i>Sign in with Google
                        </a></li>
                </ul>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Close</a>
            </div>

        </div>
    </div>
</div>