{% extends 'FqBundle::base.html.twig' %}

{% block body %}

    <div class="container" id="main">

        <div class="row">

            <div class="col-sm-3">

                <div class="well text-center" style="margin-top: 60px; height: 300px">

                    <div class="page-header">

                        <img src="{{ user.picture }}" >

                    </div><!-- end page-header -->

                    <p>{{ user.username }}</p>
